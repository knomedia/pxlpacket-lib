{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": false,
    "noEmit": true, // tsdown emits; tsc only for typecheck
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
